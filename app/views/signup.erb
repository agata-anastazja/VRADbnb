<div class ="col-md-6">
<h3>Sign Up as an Owner</h3>

<form action="/owner/new" method="POST">
  <label for="Email">
    Email:
  </label>
  <input type="email" name="email_o" required/>
  <br>
  <label for="Password">
    Password:
  </label>
  <input type="password" name="password_o"/>
  <br>
  <label for="password_confirmation">
    Password confirmation:
  </label>
  <input type="password" name="password_confirmation_o"/>
  <br>
  <input type="submit" value="Sign Up as an owner">
</form>
</div>

